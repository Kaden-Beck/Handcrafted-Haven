// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Review {
  id        Int     @id @default(autoincrement())
  rating    Int
  review    String?
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal
  type        Int
  image_src   String
  seller      Seller   @relation(fields: [sellerId], references: [id])
  sellerId    Int
  reviews     Review[]
}

model Seller {
  id       Int       @id @default(autoincrement())
  name     String
  bio      String
  account  Account?
  products Product[]
}

model Account {
  id       Int    @id @default(autoincrement())
  auth     String
  sellerId Int    @unique
  seller   Seller @relation(fields: [sellerId], references: [id])
}

